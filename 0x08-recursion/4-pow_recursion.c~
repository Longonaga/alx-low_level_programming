#include "main.h"

/**
* _pow_recursion - returns tje value of x to power of y
* @x: the value to multiply
* @y: the power
*
* Return: the value multiplied y times
*/
int _pow_recursion(int x, int y)
{
  if (y < 0)
    return (-1);
  if (y == 0)
    return (1);
  return (x * _pow_recursionn(x, y -1));
}
